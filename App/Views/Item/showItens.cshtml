@model IEnumerable<Model.Item>
@{
    ViewData["Title"] = "Itens";
}
<div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
        <form class="card card-sm" asp-action="searchitens" asp-controller="Item">
            <div class="card-body row no-gutters align-items-center">
                <div class="col-auto">
                    <i class="fas fa-search h4 text-body"></i>
                </div>
                <div class="col">
                    <input name="query" class="form-control form-control-lg form-control-borderless"
                        placeholder="Encontre um Item">
                </div>
                <div class="col-auto">
                    <button class="btn py-2 btn-primary" type="submit">Pesquisar</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3">
    <div class="col-lg-3 col-xs-12 col-sm-6 col-md-4 my-3">
        <a asp-action="addItem" asp-controller="Item">
            <div class="card h-100 shadow-sm card-add-item">
                <img src="https://www.freeiconspng.com/thumbs/add-icon-png/add-icon--line-iconset--iconsmind-29.png"
                    class="card-img-top my-auto" alt="XXXX">
            </div>
        </a>
    </div>
    @foreach (var it in Model)
    {
        <div class="col-lg-3 col-xs-12 col-sm-6 col-md-4 my-3">
            <div class="card h-100 shadow-sm"> <img
                src="https://www.freepnglogos.com/uploads/notebook-png/download-laptop-notebook-png-image-png-image-pngimg-2.png"
                class="card-img-top" alt="XXXX">
                <div class="card-body">
                    <h5 class="card-title">@it.Descricao</h5>
                    <div class="text-center my-4">
                        <a href="#" class="btn btn-primary" id="@($"addCart{it.Codigo}")">
                            Adicionar ao carrinho
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<nav aria-label="pagination" class="d-flex justify-content-center">
    <ul class="pagination d-flex">
        @if (ViewBag.page <= 1)
        {

            <li class="page-item disabled">
                <a class="page-link disabled" asp-action="showPreviousPage" asp-controller="Item"
                asp-route-page=@ViewBag.page aria-label="Next">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>

            </li>
        }
        else
        {
            <li>
                <a class="page-link disabled" asp-action="showPreviousPage" asp-controller="Item"
                asp-route-page=@ViewBag.page aria-label="Next">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>

            </li>
        }
        <li class="page-item">
            <a class="page-link" asp-action="showNextPage" asp-controller="Item" asp-route-page=@ViewBag.page
                aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>